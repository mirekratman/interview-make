{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "outDir": "../../dist/api",
        "types": ["node"],
        "paths": {
            "*": ["./seed/*", "./src/*"]
        },
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "removeComments": true
    },
    "include": [
        "seed/**/*.ts",
        "src/**/*.ts",
        "src/declarations.d.ts",
        "seed/index.ts",
        "seed/sql/sql.ts",
        "seed/json/json.js"
    ],
    "exclude": ["node_modules"]
}
